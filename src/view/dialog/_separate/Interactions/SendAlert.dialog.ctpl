<div id="sendAnAlert" class="window" style="display:none;"> 
   <div class="windowTop">
      <span class="windowTitle"><strong>Emettre une alerte pour le message #<span class="alertPostID"></span></strong></span> 
      <span class="closeDialog">Fermer</span>
   </div>
   <div class="windowContent">
      <table class="windowFields">
         <tr class="preloadedMotivations" style="display: none">
            <td class="integrateColumn1"><label for="existing_motiv">Motif :</label></td>
            <td class="integrateColumn2" colspan="2">
               <select name="existing_motiv" class="motivationsList" style="width: 100%">
                  <option value="New" selected>Nouveau motif</option>
               </select>
            </td>
         </tr>
         <tr class="newMotivation">
            <td class="integrateColumn1"><label for="new_motiv" class="newMotivLabel">Motif:</label></td>
            <td class="integrateColumn3"><input type="text" name="new_motiv" maxlength="100"/></td>
            <td class="integrateColumn4">Max. 100 caract√®res</td>
         </tr>
      </table>
      <p>
         <button>Envoyer</button>
         <br/>
      </p>
   </div>
</div>
